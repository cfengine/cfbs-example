{
  "name": "cfbs-example",
  "description": "Example project showing basic cfbs usage",
  "build": [
    {
      "name": "masterfiles",
      "description": "Official CFEngine Masterfiles Policy Framework (MPF)",
      "by": "https://github.com/cfengine",
      "repo": "https://github.com/cfengine/masterfiles",
      "commit": "28d9b933db5fc8e1dea4338669cc4fd6677646f1",
      "steps": [
        "run ./autogen.sh",
        "delete ./autogen.sh",
        "copy ./ ./"
      ]
    },
    {
      "name": "appstreams",
      "description": "Custom Promise Type to manage yum module appstreams",
      "repo": "https://github.com/olehermanse/cfbs-modules",
      "by": "https://github.com/olehermanse",
      "commit": "e9d094e277c85da8b39c06c6f94dfc6bc935ac37",
      "subdirectory": "promise_types/appstreams/",
      "steps": [
        "copy appstreams.py modules/promise_types/"
      ],
      "user_requested": true
    },
    {
      "name": "client-initiated-reporting",
      "description": "Enable client initiated reporting and disable pull collection",
      "repo": "https://github.com/olehermanse/cfbs-modules.git",
      "by": "https://github.com/olehermanse",
      "commit": "2fa7b413f27b40c72c928d0822a64e7fed98f035",
      "subdirectory": "reporting/client-initiated-reporting",
      "steps": [
        "json def.json def.json"
      ],
      "user_requested": true
    },
    {
      "name": "cfengine-cis",
      "description": "Framework to check Linux (Unix) installations for CIS-compliance",
      "repo": "https://github.com/nickanderson/cfengine-cis",
      "by": "https://github.com/nickanderson",
      "commit": "6c04f538cb33e084f435275777be421e5b104e20",
      "steps": [
        "copy policy/ services/CIS/",
        "json extras/autorun/example_def.json def.json",
        "copy extras/autorun/cis_includefiles.cf services/autorun/"
      ],
      "user_requested": true
    }
  ]
}
